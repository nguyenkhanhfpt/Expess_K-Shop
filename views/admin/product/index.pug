extends ../../layout/adminLayout
block content
    h2 Products

    table.table
        thead
            tr
                th(scope='col') Product id
                th(scope='col') Name
                th(scope='col') Price
                th
                th
        tbody
            each product in products
                tr 
                    th(scope='row')= product._id
                    td  
                        img(src="http://localhost:3000/images/" +product.imageProduct, alt="", width="50", height="70")
                        span.ml-2= product.nameProduct
                    td= product.price.toLocaleString() + ' vnd'
                    td 
                        a(onClick="return confirm('Do you want delete product')", 
                        href="/admin/products/delete/" +product._id).btn.btn-danger Delete
                        a(href="/admin/products/" +product._id).btn.btn-danger.ml-2 View

    a(href="/admin/products/add").btn.btn-primary Add new product