extends ../layout/masterLayout
block content   
    .container.pt-5

        h2.text-center.mt-3 Sign up

        if errors
            each err in errors
                .alert.alert-danger= err

        if success
            .alert.alert-success= success

        form(action="", method="POST")
            input(type="hidden", name="_csrf", value= csrfToken)
            .form-group
                label(for='name') User Name
                input#name.form-control(type='text', name="userName", 
                value= values ? values.userName : '' ,placeholder='Enter name')
            .form-group
                label(for='password') Password
                input#password.form-control(type='password', name="password", 
                value= values ? values.password : '', placeholder='Password')
            .form-group
                label(for='confirmPassword') Confirm Password
                input#confirmPassword.form-control(type='password', name="confirmPassword", 
                value= values ? values.confirmPassword : '', placeholder='Confirm Password')
            
            button.btn.btn-primary(type='submit') Submit
